<div id="<%= dom_id charge %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Partner:</strong>
    <%= charge.partner_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this charge", charge, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this charge', edit_charge_path(charge), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
